"encoding
set fenc=utf-8

"setting for file load
set nobackup
set autoread
set hidden

"setting for visual
set number
set cursorline
set virtualedit=onemore
set showcmd

"setting for indent
set smartindent
set expandtab
set tabstop=4
set shiftwidth=4
set autoindent
set smartindent

"visualize controll characters
set list
set listchars=tab:»-,trail:-,eol:↲,extends:»,precedes:«,nbsp:%

"setting for bracket
set showmatch

"complement
set wildmode=list:longest

